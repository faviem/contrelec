{% extends "BZBlogBundle::parent_print.html.twig"%}
{% block title %} 
    LISTE DES RUBRIQUES DE FINANCE
{% endblock title %}
{% block content_body %}
      
         <table style="width: 100%; border: solid 1px;border-color: black;" cellspacing="0">
               <thead>
                <tr>
                    <th style="text-align: right;width: 80%;height: 3%;text-align: center;font-weight: bold;font-size: 8pt;background-color: #85d0e7;color: #000;">
                        RUBRIQUES</th>
                    <th style="text-align: right;width: 20%;height: 3%;text-align: center;font-weight: bold;font-size: 8pt;background-color: #85d0e7;color: #000;">
                        TARIF</th>
                    
                </tr>
            </thead>
            <tbody>
                  {% set nbre=0 %}
            {% for element in rubriquefinances %}
                <tr style="border: solid 1px;border-color: black;padding: 0;background-color: {% if nbre%2==0 %} #ffffff; {% else %} #EEEEEE; {% endif%}">
                   {% set nbre=nbre+1 %}
                <td style="border: solid 0.5px;border-color: black;padding: 0;text-align: left;font-size: 9pt;height: 3%;">{{ element.libelle }}</td>
                <td style="border: solid 0.5px;border-color: black;padding: 0;text-align: left;font-size: 9pt;height: 3%;">{{ element.tarif }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock content_body %}