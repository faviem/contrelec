{% extends "BZUserBundle::layout.html.twig"%}

{% block content_body %}
<div class="col-lg-12" style="margin-top: 1%;">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span style="text-shadow: 0px 0.5px 0.5px blue;font-size: 12px;"> EXERCICE : </span> <span style="font-size: 12px;">{{ getExercice.annee }}</span>
            <span style="text-shadow: 0px 0.5px 0.5px blue;font-size: 12px;margin-left: 10px;"> EMPLACEMENT/REFERENCE  : </span> <span style="font-size: 12px;">{{ getClassement.ref }} </span>
          <a type="button" style="float: right;margin-top: -0.5%;" class="btn btn-sm btn-default " href="{{ path('bz_blog_stat_read', {'exercice': exercice  }) }}" id="retour" ><i class="icon    icon-arrow-left">  </i> Retrour</a>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                    Rédigé le
                                </th>
                                <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                    Signé le
                                </th>
                                <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                    Référence
                                </th>
                                <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                    Niveau Alerte
                                </th>
                                <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                   Objet
                                </th>
                                <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                   PJ
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                           {% set nbre = 0 %}
                           {% for serv in couriers %}
                            <tr class="gradeA {% if nbre%2==0 %} odd {% else %} even{% endif%}">
                                {% set nbre = nbre+1 %}
                                <td class="" style="font-size: 12px;">{{ serv.dateRediger|date('d/m/Y') }}</td>
                                <td class="" style="font-size: 12px;">{{ serv.dateSignature|date('d/m/Y') }}</td>
                                <td class="" style="font-size: 12px;">{{ serv.ref }}</td>
                                <td class="" style="font-size: 12px;">
                                   <div class="tooltip-demo" style="font-size: 12px;text-align: center;">  
                                                <a  style="font-size: 12px;text-align: center;" href="#"  data-container="body" data-toggle="popover" data-placement="top" 
                                                    data-content="
                                                    Contenu :   {{ serv.contenu }}
                                                    ">
                                                    {%if serv.niveaualerte is not null %}{{ serv.niveaualerte.libelle }} {%else %} Aucune {%endif %}
                                                </a>
                                            </div>
                              </td>
                              <td  style="font-size: 12px;text-align: center;">
                                  <div class="tooltip-demo" style="font-size: 12px;text-align: center;">  
                                                <a  style="font-size: 12px;text-align: center;" href="#"  data-container="body" data-toggle="popover" data-placement="top" 
                                                    data-content="
                                                    Catégorie :  {%if serv.categoriecourier is not null %}   {{ serv.categoriecourier.libelle }} {%else %} Aucune {%endif %}
                                                    ">
                                                  {%if serv.objetcourier is not null %} {{ serv.objetcourier.libelle }} {%else %} Aucun {%endif %}
                                                </a>
                                            </div>
                                   </td>
                                   <td style="font-size: 12px;"> <a href="{{ asset( serv.image.dowloadPath) }}" target="_blank"> {{ serv.image.nameFile }}  </a> </td>
 
                            </tr>
                           {% endfor %}
                        </tbody>
                    </table>
                    </div>
            </div>

        </div>
    </div>
</div>
      
<div id='frm_createVille'>
    
</div>
{% endblock content_body %}
