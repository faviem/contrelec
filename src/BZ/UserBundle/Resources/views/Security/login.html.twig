<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %} CONTRELEC-BENIN {% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
        <!-- Bootstrap 3.3.4 -->
        <link href="{{ asset('assets/login/assets/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />  
        <!-- FontAwesome 4.3.0 -->
        <link href="{{ asset('assets/login/assets/font-awesome-4.3.0/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css" />
       <!-- Theme style -->
        <link href="{{ asset('assets/login/dist/css/AdminLTE.min.css') }}" rel="stylesheet" type="text/css" />   
        <!-- iCheck -->
        <link href="{{ asset('assets/login/plugins/iCheck/square/blue.css') }}" rel="stylesheet" type="text/css" />
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body class="login-page">
        <header >
            
                   
        </header>
        <div class="login-box" style="margin-top: 10%;">
        
      <div class="login-logo">
          <img src="{{ asset('assets/icons/plainte.png')}}" alt="" title="Gestion automatisée des archives" style="height: 12%;width: 13%;margin-left: -1.5%;" >
      <a href="{{ path("bz_user_register") }}"> <b style="font-size: 23px;margin-right: 2%;color: #0000EE;">  Welcom to SysGAC  </b></a>
            <img src="{{ asset('images/communication.jpg')}}" alt="" title="Gestion de la communication" style="height: 13%;width: 13%;" > 
      </div><!-- /.login-logo -->
      <div class="login-box-body thumbnail">
          <p class="login-box-msg" style="font-size: 10px;">
            *** Plate-forme de Suivi des Activités de CONTRELEC  ***
        </p>
         {% if error %}
              <div class="alert-error" style="margin-bottom: 5%;padding: 2%;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
         {% endif %}
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
          <div class="form-group has-feedback">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Login"/>
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password"/>
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>
          <div class="row">
            <div class="col-xs-8">    
              <div class="checkbox icheck hide">
                <label>
                  <input type="checkbox" id="remember_me" name="_remember_me" value="on" style="margin-right: 10px;"/> Remember Me
                </label>
              </div>                        
            </div><!-- /.col -->
            <div class="col-xs-4">
              <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
            </div><!-- /.col -->
          </div>
        </form>
            
      </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
        
        {% block body %}{% endblock %}
        <!-- jQuery 2.1.4 -->
        <script src="{{ asset('assets/login/plugins/jQuery/jQuery-2.1.4.min.js') }}"></script>
        
        <script src="{{ asset('assets/login/assets/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script> 
        <!-- morris.js.charts -->
        <script src="{{ asset('assets/login/plugins/iCheck/icheck.min.js') }}" type="text/javascript"></script>
        
        <script >
            $(function () {
                $('input').iCheck({
                  checkboxClass: 'icheckbox_square-blue',
                  radioClass: 'iradio_square-blue',
                  increaseArea: '20%' // optional
                });
              });
        </script>
        
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
