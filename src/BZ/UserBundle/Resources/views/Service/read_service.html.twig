                   type: 'GET',
                   url: butonsupp.attr('href'),
                   cache: false,
                   success: function(data) {
                       $('#frm_createVille').html(data);
                      // $('#frm_createVille').dialog();
                   },
                   error: function() {alert('coupé');} });
               //we dont what the browser to submit the form
               event.preventDefault();
        });
    </script>
{% endblock javascript %}