{% extends "BZUserBundle::layout.html.twig"%}

{% block content_body %}
<div class="col-lg-12" style="margin-top: 1%;">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span style="text-shadow: 0px 0.5px 0.5px blue;font-size: 13px;"> GESTIONNAIRE DES DIRECTIONS - SERVICES ET AGENCES </span> 
            <a href="{{ path('create_service') }}" class="btn btn-success btn-xs btn-flat createVille" data-toggle="modal" data-target="#myModal" style="float: right;" ><i class="icon   icon-plus-sign icon-white"></i></a>
            <a href="{{ path('print_service') }}" style="float: right;margin-right: 5px;color: black;" target="_blank" class="btn btn-default btn-xs btn-flat " > <i class="icon   icon-print"></i></a>               
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                    Dénomination
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                    Sigle
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                    Responsable
                                </th>
                                <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                           {% set nbre = 0 %}
                           {% for serv in services %}
                            <tr class="gradeA {% if nbre%2==0 %} odd {% else %} even{% endif%}">
                                {% set nbre = nbre+1 %}
                                <td class="" style="font-size: 12px;">{{ serv.denomination }}</td>
                                <td class="" style="font-size: 12px;">{{ serv.sigle }}</td>
                                <td class="" style="font-size: 12px;">{% if serv.user is not null %}{{ serv.user.NomPrenom }} {% else %} Aucun {% endif %}</td>
                                <td class="sorting_1" style="text-align: center;">
                                    <a href="{{ path('update_service', {'id':  serv.id }) }}" class="btn btn-warning btn-xs btn-flat modifVille" data-toggle="modal" data-target="#myModalu"><i class="icon   icon-edit-sign icon-white"></i></a>
                                    <a href="{{ path('delete_service',{'id': serv.id }) }}" class="btn btn-danger btn-xs btn-flat suppVille" data-toggle="modal" data-target="#myModal"><i class="icon   icon-remove-circle icon-white"></i></a>
                                    <a href="{{ path('voir_user_service', {'service':  serv.id }) }}" class="btn btn-info btn-xs btn-flat " ><i class="icon  icon-share "></i></a>
                                                
                                </td>
                            </tr>
                           {% endfor %}
                        </tbody>
                    </table>
                    </div>
            </div>

        </div>
    </div>
</div>
      
<div id='frm_createVille'>
    
</div>
{% endblock content_body %}
{% block javascript %} 
    <script>
       // Notifications();      
        $('.createVille').click(function(event){
            var buton= $(this);
            $('#frm_createVille').html('');
            $.ajax({
                   type: 'GET',
                   url: buton.attr('href'),
                   cache: false,
                   success: function(data) {
                       $('#frm_createVille').html(data);
                      // $('#frm_createVille').dialog();
                   },
                   error: function() {alert('coupé');} });
               //we dont what the browser to submit the form
               event.preventDefault();
        });
        $('.modifVille').click(function(event){
            var butonmod= $(this);
